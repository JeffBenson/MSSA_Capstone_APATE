@model IEnumerable<MvcDevices.Models.Devices>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/bootstrap.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<h1>All Devices</h1>

<p>
    <a asp-action="Create">Add New Device</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicIP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrivateIP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConnectionStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrivilegeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hostname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicIP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrivateIP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConnectionStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrivilegeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hostname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AssetID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AssetID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AssetID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
